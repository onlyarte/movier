extends layout

block content
    div(class='content')
        script(src='/javascripts/filmcontroller.js', async, defer)
        div(class='poster col')
            img(src=poster, width=300)
            div(id='controlls')
            div(id='id', hidden='true')= id
        div(class='info col')
            h1 #{title} / #{title_original}
            p IMDB #{rating_imdb} KP #{rating_kp}
            p Год #{year}
            p Страна #{country}
            p Жанр #{genre}
            p Режиссер
            each person in director
                - var name = person.name_person_ru
                p= name
            h2 Описание
            p!= description
