doctype html
html(lang='ru')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        block title
            title MOVIER
        // Font
        link(href='https://fonts.googleapis.com/css?family=Megrim|Open+Sans|Roboto|Rubik|Istok+Web', rel="stylesheet")
        // Main styles
        link(href='/stylesheets/css/style.css', rel='stylesheet')

        script(src="/javascripts/nav.js")
        script(src="/javascripts/search.js")
    body
        a#menu-open(onclick="openNav()")
            img(src="/images/icons/menu.png")
        #menu-overlay
            a#menu-close.menu-item(href="", onclick="closeNav()")
                img(src="/images/icons/close.png")
                span Movier
            #search.menu-item
                input#search-box(type="text", placeholder="Поиск")
                input.submit(type="image", src="/images/icons/search.png", onclick="search()")
            #search-results.menu-group
                .group-info
                    img(src="/images/icons/search.png")
                    span Результаты поиска
            a.menu-item(href="")
                img(src="/images/icons/home.png")
                span Мой профиль
            block collections

        #content
            block content
